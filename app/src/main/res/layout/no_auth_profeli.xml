<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_auth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/booking_button_noactivity"
        app:layout_constraintBottom_toBottomOf="@+id/no_auth"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="@id/no_auth"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:background="@drawable/errorwindow"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:text="Войти" />
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:background="@color/D7" />
        <TextView
            android:id="@+id/register"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/errorwindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/roboto"
            android:text="Зарегистрироваться" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>